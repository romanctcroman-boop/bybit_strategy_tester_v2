# =============================================================================
# CACHE CONFIGURATION - PRODUCTION EXAMPLE
# =============================================================================
# Copy to .env.production and customize for your environment

# Environment
ENV=production
CACHE_ENV=production

# L1 Cache (In-Memory)
CACHE_L1_SIZE=5000  # Larger cache for high traffic
CACHE_L1_TTL=600  # 10 minutes

# L2 Cache (Redis)
CACHE_L2_TTL=7200  # 2 hours
CACHE_ENABLE_L2=true  # REQUIRED in production
CACHE_L2_REDIS_URL=redis://prod-redis:6379/0
CACHE_L2_CONNECTION_TIMEOUT=5
CACHE_L2_OPERATION_TIMEOUT=2

# Feature Flags
CACHE_ENABLE_L1=true
CACHE_ENABLE_METRICS=true  # Critical for monitoring!
CACHE_ENABLE_ETAG=true  # Bandwidth optimization
CACHE_ENABLE_CACHE_WARMING=true  # Pre-warm hot data

# HTTP Cache Headers
CACHE_HTTP_CACHE_MAX_AGE=120  # 2 minutes

# =============================================================================
# PRODUCTION CHECKLIST:
# ✓ Redis is configured and accessible
# ✓ Prometheus is scraping /metrics/cache endpoint
# ✓ Grafana dashboards are imported
# ✓ Alerts configured for:
#   - Cache hit rate < 90%
#   - L2 errors > 10/min
#   - Cache operation latency > 100ms (p95)
# =============================================================================
