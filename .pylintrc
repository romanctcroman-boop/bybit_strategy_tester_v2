[MASTER]
# Python 3.13 compatibility
py-version = 3.13

# Use multiple processes to speed up Pylint
jobs = 0

# Pickle collected data for later comparisons
persistent = yes

# Files or directories to be skipped
ignore = CVS,.git,__pycache__,.venv,venv,node_modules,frontend,dist,alembic

# Ignore patterns
ignore-patterns = test_.*?\.py,.*_test\.py

[MESSAGES CONTROL]
# Disable specific warnings that conflict with our style or are too strict
disable = 
    C0111,  # missing-docstring (gradually enable)
    C0103,  # invalid-name (allow short names in tests)
    R0903,  # too-few-public-methods (OK for data classes)
    R0913,  # too-many-arguments (common in DI)
    R0914,  # too-many-locals (acceptable for complex logic)
    W0212,  # protected-access (needed for testing)
    W0621,  # redefined-outer-name (pytest fixtures)
    W0613,  # unused-argument (common in overrides)
    E1101,  # no-member (false positives with SQLAlchemy)
    R0801,  # duplicate-code (similar test patterns)
    C0330,  # bad-continuation (handled by black)
    C0326,  # bad-whitespace (handled by black)

[REPORTS]
# Output format
output-format = colorized

# Put messages in a separate file for each module
reports = no

# Evaluation score
score = yes

[REFACTORING]
# Maximum number of nested blocks
max-nested-blocks = 5

[BASIC]
# Good variable names
good-names = i,j,k,ex,Run,_,id,df,db,app

# Regular expression for naming
function-rgx = [a-z_][a-z0-9_]{2,50}$
variable-rgx = [a-z_][a-z0-9_]{2,50}$
const-rgx = (([A-Z_][A-Z0-9_]*)|(__.*__))$
attr-rgx = [a-z_][a-z0-9_]{2,50}$
argument-rgx = [a-z_][a-z0-9_]{2,50}$
class-attribute-rgx = ([A-Za-z_][A-Za-z0-9_]{2,50}|(__.*__))$
class-rgx = [A-Z_][a-zA-Z0-9]+$
module-rgx = (([a-z_][a-z0-9_]*)|([A-Z][a-zA-Z0-9]+))$

[FORMAT]
# Maximum line length
max-line-length = 100

# Maximum number of lines in a module
max-module-lines = 1000

# String used for indentation
indent-string = '    '

[DESIGN]
# Maximum number of arguments for function
max-args = 8

# Maximum number of attributes for a class
max-attributes = 15

# Maximum number of public methods for a class
max-public-methods = 25

[IMPORTS]
# Allow wildcard imports from typing
allow-wildcard-with-all = yes

[EXCEPTIONS]
# Exceptions that will emit a warning when being caught
overgeneral-exceptions = BaseException,Exception

[SIMILARITIES]
# Minimum lines number of a similarity
min-similarity-lines = 10

# Ignore imports when computing similarities
ignore-imports = yes

# Ignore docstrings when computing similarities
ignore-docstrings = yes

# Ignore comments when computing similarities
ignore-comments = yes
