# =============================================================================
# CACHE CONFIGURATION - STAGING
# =============================================================================
# Production-like environment for testing with moderate caching

# Environment
ENV=staging
CACHE_ENV=staging

# L1 Cache (In-Memory)
CACHE_L1_SIZE=2000
CACHE_L1_TTL=300  # 5 minutes

# L2 Cache (Redis)
CACHE_L2_TTL=1800  # 30 minutes
CACHE_ENABLE_L2=true  # Redis enabled in staging
CACHE_L2_REDIS_URL=redis://staging-redis:6379/0
CACHE_L2_CONNECTION_TIMEOUT=5
CACHE_L2_OPERATION_TIMEOUT=2

# Feature Flags
CACHE_ENABLE_L1=true
CACHE_ENABLE_METRICS=true
CACHE_ENABLE_ETAG=true
CACHE_ENABLE_CACHE_WARMING=true  # Test cache warming

# HTTP Cache Headers
CACHE_HTTP_CACHE_MAX_AGE=60  # 1 minute

# =============================================================================
# NOTES:
# - L2 enabled for production-like testing
# - Moderate TTLs and cache sizes
# - All features enabled for testing
# - Cache warming enabled to test startup performance
# =============================================================================
