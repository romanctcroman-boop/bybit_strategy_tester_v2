# ==============================================================================
# EditorConfig - Consistent Coding Styles Across Editors
# ==============================================================================
# https://editorconfig.org
# Supported by VS Code, PyCharm, Sublime Text, Vim, and many others

root = true

# ==========================================================================
# Default Settings for All Files
# ==========================================================================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# ==========================================================================
# Python Files
# ==========================================================================
[*.py]
indent_size = 4
max_line_length = 120

# ==========================================================================
# JavaScript / TypeScript
# ==========================================================================
[*.{js,jsx,ts,tsx}]
indent_size = 2

# ==========================================================================
# Web Files (HTML, CSS)
# ==========================================================================
[*.{html,htm}]
indent_size = 2

[*.css]
indent_size = 2

# ==========================================================================
# Configuration Files
# ==========================================================================
[*.{json,yml,yaml}]
indent_size = 2

[*.toml]
indent_size = 4

# ==========================================================================
# Shell Scripts
# ==========================================================================
[*.{sh,bash,zsh}]
indent_size = 2
end_of_line = lf

# ==========================================================================
# PowerShell Scripts
# ==========================================================================
[*.{ps1,psm1,psd1}]
indent_size = 4
end_of_line = crlf

# ==========================================================================
# Docker Files
# ==========================================================================
[Dockerfile*]
indent_size = 4

[docker-compose*.yml]
indent_size = 2

# ==========================================================================
# Markdown
# ==========================================================================
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# ==========================================================================
# Makefile (requires tabs)
# ==========================================================================
[Makefile]
indent_style = tab
indent_size = 4

[*.mk]
indent_style = tab
indent_size = 4

# ==========================================================================
# Git Files
# ==========================================================================
[.git*]
indent_size = 4

# ==========================================================================
# SQL Files
# ==========================================================================
[*.sql]
indent_size = 2

# ==========================================================================
# Minified Files (don't modify)
# ==========================================================================
[*.min.*]
insert_final_newline = false
trim_trailing_whitespace = false
indent_style = ignore
