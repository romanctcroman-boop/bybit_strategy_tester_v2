{
  "editor.formatOnSave": true,
  "prettier.requireConfig": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "python.sortImports.path": [
    "isort"
  ],
  "python.sortImports.args": [
    "--settings-path",
    "${workspaceFolder}\\.isort.cfg"
  ],
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  // YAML Schema associations to prevent false schema validation errors
  "yaml.schemas": {
    "https://raw.githubusercontent.com/grafana/grafana/main/devenv/docker/provisioning/datasources/datasources.json": [
      "deployment/grafana/provisioning/datasources/*.yaml"
    ],
    "https://raw.githubusercontent.com/prometheus/prometheus/main/config/testdata/conf.good.yml": [
      "deployment/prometheus/*.yml",
      "deployment/prometheus/*.yaml"
    ]
  },
  // Hide nested Git repo (mcp-server) from the parent workspace Git view
  "git.ignoredRepositories": [
    "${workspaceFolder}/mcp-server"
  ],
  // Exclude nested repo from file watching and search to reduce noise
  "files.watcherExclude": {
    "mcp-server/**": true
  },
  "search.exclude": {
    "mcp-server/**": true
  },
  // Auto-run tasks on folder open
  "task.allowAutomaticTasks": "on",
  // Python testing configuration
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestArgs": [
    "tests"
  ],
  // ═══════════════════════════════════════════════════════════
  // GitHub Copilot — Maximum Agent Autonomy for Claude 4.5
  // ═══════════════════════════════════════════════════════════
  // Core Agent Mode
  "github.copilot.chat.agent.enabled": true,
  // Increase iteration limit for complex multi-step tasks
  "chat.agent.maxRequests": 30,
  // Allow agent to auto-run workspace tasks (build, test, lint)
  "chat.agent.runTasks": true,
  // ⚡ CRITICAL: Enable prompt files (.github/prompts/)
  "chat.promptFiles": true,
  // Enable organization-level custom agents (if any)
  "github.copilot.chat.organizationCustomAgents.enabled": true,
  // Additional search locations for custom agents
  "chat.agentFilesLocations": [
    ".github/agents",
    ".agent"
  ],
  // Additional search locations for agent skills
  "chat.agentSkillsLocations": [
    ".github/skills",
    ".agent/skills"
  ],
  // Copilot instructions location (auto-loaded)
  "github.copilot.chat.codeGeneration.instructions": [
    {
      "file": ".github/copilot-instructions.md"
    },
    {
      "file": ".agent/Claude.md"
    }
  ],
  // Test generation instructions
  "github.copilot.chat.testGeneration.instructions": [
    {
      "file": ".github/instructions/tests.instructions.md"
    }
  ],
  // Code review instructions
  "github.copilot.chat.reviewSelection.instructions": [
    {
      "file": ".github/prompts/code-review.prompt.md"
    }
  ],
  // Copilot completions tuning
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "python": true,
    "javascript": true,
    "html": true,
    "css": true,
    "json": true,
    "yaml": true
  }
}