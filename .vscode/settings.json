{
  "editor.formatOnSave": true,
  "prettier.requireConfig": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "python.sortImports.path": [
    "isort"
  ],
  "python.sortImports.args": [
    "--settings-path",
    "${workspaceFolder}\\.isort.cfg"
  ],
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  // YAML Schema associations to prevent false schema validation errors
  "yaml.schemas": {
    "https://raw.githubusercontent.com/grafana/grafana/main/devenv/docker/provisioning/datasources/datasources.json": [
      "deployment/grafana/provisioning/datasources/*.yaml"
    ],
    "https://raw.githubusercontent.com/prometheus/prometheus/main/config/testdata/conf.good.yml": [
      "deployment/prometheus/*.yml",
      "deployment/prometheus/*.yaml"
    ]
  },
  // Hide nested Git repo (mcp-server) from the parent workspace Git view
  "git.ignoredRepositories": [
    "${workspaceFolder}/mcp-server"
  ],
  // Exclude heavy directories from file watching (saves CPU + RAM)
  "files.watcherExclude": {
    "mcp-server/**": true,
    "**/.venv/**": true,
    "**/.mypy_cache/**": true,
    "**/.ruff_cache/**": true,
    "**/.pytest_cache/**": true,
    "**/node_modules/**": true,
    "**/logs/**": true,
    "**/build/**": true,
    "**/mcp-deepseek/**": true,
    "**/__pycache__/**": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/vscode-extension/**": true,
    "**/.cursor/**": true,
    "**/.vs/**": true,
    "**/bybit_strategy_tester.egg-info/**": true,
    "test_e2e_test_*/**": true,
    "test_eval_test_*/**": true,
    "test_memory_test_*/**": true,
    "**/agent_memory/**": true,
    "**/journal/**": true
  },
  // Hide non-essential directories from Explorer sidebar
  "files.exclude": {
    "**/.mypy_cache": true,
    "**/.ruff_cache": true,
    "**/.pytest_cache": true,
    "**/mcp-deepseek": true,
    "**/__pycache__": true,
    "**/.cursor": true,
    "**/.vs": true,
    "**/bybit_strategy_tester.egg-info": true,
    "**/.cache": true,
    "test_e2e_test_*": true,
    "test_eval_test_*": true,
    "test_memory_test_*": true
  },
  // Exclude from search results (Ctrl+Shift+F)
  "search.exclude": {
    "mcp-server/**": true,
    "**/.venv/**": true,
    "**/.mypy_cache/**": true,
    "**/.ruff_cache/**": true,
    "**/.pytest_cache/**": true,
    "**/node_modules/**": true,
    "**/logs/**": true,
    "**/build/**": true,
    "**/mcp-deepseek/**": true,
    "**/__pycache__/**": true,
    "**/*.sqlite3": true,
    "**/*.sqlite3-wal": true,
    "**/*.sqlite3-shm": true,
    "**/vscode-extension/**": true,
    "**/.cursor/**": true,
    "**/.vs/**": true,
    "test_e2e_test_*/**": true,
    "test_eval_test_*/**": true,
    "test_memory_test_*/**": true
  },
  // Auto-run tasks on folder open
  "task.allowAutomaticTasks": "on",
  // Python testing configuration
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestArgs": [
    "tests"
  ],
  // ═══════════════════════════════════════════════════════════
  // GitHub Copilot — Maximum Agent Autonomy for Claude Sonnet 4 / Opus 4
  // ═══════════════════════════════════════════════════════════
  // Core Agent Mode
  "github.copilot.chat.agent.enabled": true,
  // Increase iteration limit for complex multi-step tasks
  "chat.agent.maxRequests": 30,
  // Allow agent to auto-run workspace tasks (build, test, lint)
  "chat.agent.runTasks": true,
  // ⚡ CRITICAL: Enable prompt files (.github/prompts/)
  "chat.promptFiles": true,
  // Enable organization-level custom agents (if any)
  "github.copilot.chat.organizationCustomAgents.enabled": true,
  // Additional search locations for custom agents
  "chat.agentFilesLocations": [
    ".github/agents",
    ".agent"
  ],
  // Additional search locations for agent skills
  "chat.agentSkillsLocations": [
    ".github/skills"
  ],
  // Copilot instructions location (auto-loaded)
  // Copilot instructions are now auto-loaded from .github/instructions/ files
  // and .github/copilot-instructions.md (no manual config needed)
  // Copilot completions tuning
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "python": true,
    "javascript": true,
    "html": true,
    "css": true,
    "json": true,
    "yaml": true
  }
}