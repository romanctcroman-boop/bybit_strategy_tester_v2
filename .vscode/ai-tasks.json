{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "AI: Generate Code (DeepSeek)",
      "type": "shell",
      "command": "python",
      "args": [
        "${workspaceFolder}/mcp-server/vscode_integration.py",
        "--task",
        "code-generation",
        "--prompt",
        "${input:codePrompt}"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
