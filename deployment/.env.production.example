# ==============================================================================
# Production Environment Configuration â€” deployment/.env.production.example
# ==============================================================================
# Copy this file to deployment/.env.production and fill in real values.
# This file is loaded by docker-compose.yml via env_file directive.
# NEVER commit .env.production to version control.
# ==============================================================================

# -----------------------------------------------------------------------------
# API Keys
# -----------------------------------------------------------------------------
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here
QWEN_API_KEY=your_qwen_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO          # DEBUG | INFO | WARNING | ERROR
PORT=8000
WORKERS=2               # Uvicorn worker count per instance

# -----------------------------------------------------------------------------
# Trade Publisher Settings
# -----------------------------------------------------------------------------
# Comma-separated list of symbols to stream
SYMBOLS=BTCUSDT,ETHUSDT,SOLUSDT

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
USE_REDIS_PUBSUB=true
FAST_DEV_MODE=false
SKIP_CACHE_WARMUP=false

# -----------------------------------------------------------------------------
# NOTE: REDIS_URL is intentionally NOT configured here.
# It uses the Docker internal hostname redis://redis:6379 which is
# set directly in docker-compose.yml and cannot be overridden externally.
# -----------------------------------------------------------------------------
